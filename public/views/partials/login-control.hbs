<form id="login-form">
  <div class="input-group wedding-login-container">
    <label for="login-name" class="wedding-login-label">{{locale.insertNameLabel}}</label>
    <input placeholder="{{locale.insertNamePlaceholder}}" class="form-control wedding-login-input"
           id="login-name" type="text" autofocus>
    <button id="login-submit" type="submit" class="btn btn-default">{{locale.submit}}</button>
  </div>
</form>