<form id="login-form">
  <div class="input-group wedding-login-content">
    <label for="login-name" class="wedding-login-label">{{format locale.insertNameLabel}}</label>
    <input placeholder="{{locale.insertNamePlaceholder}}" class="form-control wedding-login-input wedding-login-form-control"
           id="login-name" type="text" autofocus>
    <button id="login-submit" type="submit" class="btn btn-default wedding-login-form-control">{{locale.submit}}</button>
  </div>
</form>